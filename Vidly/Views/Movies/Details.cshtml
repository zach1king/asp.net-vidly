@using System.Globalization
@model Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var dateFormat = "dddd, MMMM dd, yyyy";
    CultureInfo ci = new CultureInfo("en-US");
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToString(dateFormat, ci)</li>
    <li>Date Added: @Model.DateAdded.ToString(dateFormat, ci)</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>